<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeCommon" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeRed" parent="AppThemeCommon">
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="android:windowBackground">@drawable/gradient_red</item>
    </style>

    <style name="AppThemeYellow" parent="AppThemeCommon">
        <item name="colorPrimary">@color/colorPrimaryYellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkYellow</item>
        <item name="android:windowBackground">@drawable/gradient_yellow</item>
    </style>

    <style name="AppThemeGreen" parent="AppThemeCommon">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="android:windowBackground">@drawable/gradient_green</item>
    </style>

    <style name="AppThemeBlue" parent="AppThemeCommon">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="android:windowBackground">@drawable/gradient_blue</item>
    </style>

    <style name="TextViews">
        <item name="android:layout_marginRight">@dimen/item_tv_margin</item>
        <item name="android:layout_marginLeft">@dimen/item_tv_margin</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/luckiest_guy_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/item_tv_text_size</item>
    </style>

    <style name="ImageButtonSwitch">
        <item name="android:background">@drawable/shape_button_circle</item>
        <item name="android:onClick">action</item>
    </style>

    <style name="ImageButtonTransition" parent="ImageButtonSwitch">
        <item name="android:layout_width">@dimen/ib_transition</item>
        <item name="android:layout_height">@dimen/ib_transition</item>
    </style>

</resources>