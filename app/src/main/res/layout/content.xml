<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_name"
        style="@style/TextViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/content_margin"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/ib_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageButton
        android:id="@+id/ib_play"
        style="@style/ImageButtonSwitch"
        android:layout_width="@dimen/ib_switch"
        android:layout_height="@dimen/ib_switch"
        android:src="@drawable/ic_play_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ib_prev"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <ImageButton
        android:id="@+id/ib_prev"
        style="@style/ImageButtonTransition"
        android:layout_marginStart="@dimen/content_margin"
        android:layout_marginEnd="@dimen/content_margin"
        android:src="@drawable/ic_backward_green"
        app:layout_constraintBottom_toBottomOf="@+id/ib_play"
        app:layout_constraintEnd_toStartOf="@+id/ib_after"
        app:layout_constraintStart_toEndOf="@+id/ib_play"
        app:layout_constraintTop_toTopOf="@+id/ib_play" />

    <ImageButton
        android:id="@+id/ib_after"
        style="@style/ImageButtonTransition"
        android:src="@drawable/ic_forward_green"
        app:layout_constraintBottom_toBottomOf="@+id/ib_prev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ib_prev"
        app:layout_constraintTop_toTopOf="@+id/ib_prev" />

</android.support.constraint.ConstraintLayout>